{
  "scripts": {
    "build":
      "webpack -p --mode=production --hide-modules --progress --color -display=minimal",
    "start": "NODE_ENV=dev webpack-dev-server --mode=development --color",
    "code": "code app || open app -a atom",
    "hello":
      "(yarn install || npm i) && (yarn start --open || npm run start --open)",
    "prettier": "prettier \"app/src/**/*.@(js|scss)\" --write",
    "precommit": "pretty-quick --staged",
    "watch":
      "webpack -w --mode=development --progress --colors --hide-modules --cache --bail --display=minimal"
  },
  "author":
    "Adrien Zaganelli <adrienzaganelli@gmail.com> (http://adrienzaganelli.com/)",
